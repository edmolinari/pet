<h1>Pets</h1>

<div id="pets">
  <% @pets.each do |pet| %>
    <%= render pet %>
    <p>
      <%= link_to "Show this pet", pet %>
      <%= link_to "Update pet", edit_pet_path(pet.id) %>
    </p>
  <% end %>
</div>

